<h1>Burgers</h1>

<h2>Uneaten</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
        {{> burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
        {{> burger-block}}
      {{!-- {{> Burger/burger-block devoured=true}} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>